@model QubiaWebPage.Models.CareerViewModel

@{
    ViewData["Title"] = "Reclutamiento";
}

<section class="bg-light py-5">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-lg-7">

                <div class="card shadow border-0">
                    <div class="card-body p-4">

                        <h2 class="text-center fw-bold mb-4">
                            Únete a Qubia
                        </h2>

                        <form method="post" enctype="multipart/form-data">

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Nombre completo</label>
                                    <input class="form-control" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Cédula</label>
                                    <input class="form-control" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Correo electrónico</label>
                                <input type="email" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Número de teléfono</label>
                                <input class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Estudios realizados</label>
                                <input class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">¿Cómo conoció la empresa?</label>
                                <input class="form-control" />
                            </div>

                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" />
                                <label class="form-check-label">
                                    Actualmente trabaja
                                </label>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Expectativa salarial</label>
                                <input type="number" class="form-control" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label">Currículum (CV)</label>
                                <input type="file" class="form-control" />
                            </div>

                            <div class="d-grid">
                                <button class="btn btn-success btn-lg">
                                    Enviar solicitud
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>
</section>
